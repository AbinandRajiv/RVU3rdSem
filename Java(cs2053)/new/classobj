import java.util.*;

class Student {
    private String name;
    private int rollNumber;
    private double[] marks; // marks in subjects

    // Default constructor
    public Student() {
        this("Unknown", 0, new double[]{0, 0, 0});
    }

    // Parameterized constructor
    public Student(String name, int rollNumber, double[] marks) {
        this.name = name;
        this.rollNumber = rollNumber;
        this.marks = marks.clone();
    }

    // this keyword + method invocation
    public void assignValues(String name, int roll, double[] marks) {
        this.name = name;
        this.rollNumber = roll;
        this.marks = marks.clone();
    }

    public double total() {
        double s = 0;
        for (double m : marks) s += m;
        return s;
    }

    public double average() {
        return total() / marks.length;
    }

    public void display() {
        System.out.println("Student{name='" + name + "', roll=" + rollNumber +
                ", marks=" + Arrays.toString(marks) + ", avg=" + average() + "}");
    }

    public static void main(String[] args) {
        Student s1 = new Student("Asha", 101, new double[]{88, 76, 91});
        s1.display();

        Student s2 = new Student();
        s2.assignValues("Ravi", 102, new double[]{65, 72, 58});
        s2.display();
    }
}
